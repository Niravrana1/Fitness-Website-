@model IEnumerable<Fitness.Models.Viewmodel.Scheduleclassviewmodel>

@{
    ViewBag.Title = "Viewscheduledclasses";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
<style>
    .btn-block {
        border-color: #F23A2E;
        border-radius: 10px;
        background-color: #F23A2E;
    }

        .btn-block:hover {
            background-color: white;
            color: #F23A2E;
            transition: .5s;
            border-color: #F23A2E;
        }
</style>
<div class="container mt-5 mb-5">
    <h5 class="text-center text-uppercase">Booked Classes</h5><hr style="border:1px solid #F23A2E; width:10%; background-color:#F23A2E; margin-bottom:3em;" />
</div>

<div class="container pt-2 ">
    <div class="justify-content-center shadow p-5 mb-5 bg-white rounded pricediv p-4" >
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.classname)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MembershipName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ScheduleDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.classname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MembershipName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleTime)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "ScheduledclassDetails", "Customer", new { id = item.scheduledclassid }, null) |
                        @Html.ActionLink("Delete", "DeleteScheduledclass", "Customer", new { id = item.scheduledclassid }, null)
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>

        <div style="width:15%">
            <a href="~/Customer/ScheduleClasssession" class="btn btn-primary btn-lg btn-block p-2">Book Class</a>
        </div>
